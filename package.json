{
  "name": "Hoverpad",
  "version": "1.0.0",
  "description": "Hoverpad",
  "scripts": {
    "build": "elm-make Main.elm --output=hoverpad.js",
    "debug": "elm-live Main.elm --output=hoverpad.js --open -- --debug",
    "live": "elm-live Main.elm --output=hoverpad.js --open",
    "fx-web-ext": "web-ext build",
    "electron": "electron electron.js",
    "publish-to-gh-pages": "mkdir -p dist && cp -r index.html *.js *.css icons dist && gh-pages --dist ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla-services/hoverpad.git"
  },
  "author": "Storage team",
  "license": "MPL",
  "bugs": {
    "url": "https://github.com/mozilla-services/hoverpad/issues"
  },
  "homepage": "https://github.com/mozilla-services/hoverpad#readme",
  "devDependencies": {
    "elm": "^0.18.0",
    "elm-live": "^2.6.1",
    "web-ext": "^1.7.0",
    "gh-pages": "^0.11.0",
    "electron": "1.4.15"
  }
}
