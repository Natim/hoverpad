{
  "manifest_version": 2,
  "name": "Hoverpad",
  "version": "1.8.2",
  "description": "A persistent encrypted pad â€” click a button in your browser and add some notes, which will persist even after browser restarts and be synced between your browsers.",
  "icons": {
    "48": "icons/hoverpad-48.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "identity",
    "notifications",
    // TODO: fix up
    "*://*/*"
  ],


  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "32": "icons/hoverpad-32.png"
    },
    "default_title": "Hoverpad",
    "default_popup": "index.html"
  },


  "options_ui": {
    "page": "options/options.html"
  },

  "applications": {
    "gecko": {
      "id": "hoverpad@mozilla.com"
    }
  }
}
